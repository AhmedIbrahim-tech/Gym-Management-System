@using Core.Modules.UserManagement.ViewModels
@model RolePermissionsViewModel

<partial name="_AlertMessages" />

<partial name="_PageHeader" model="@((string)null)" />

<div class="card shadow-sm rounded-4 border-0 bg-white">
    <div class="card-body p-4 p-md-5">
        <div class="d-flex align-items-center gap-3 mb-4 pb-3 border-bottom border-2 border-light">
            <div class="bg-info-subtle rounded-4 p-3">
                <i data-feather="shield-check" class="feather-lg text-info"></i>
            </div>
            <div>
                <h3 class="fw-semibold text-body-emphasis mb-1 lh-base">Manage Permissions - @Model.RoleName</h3>
                <p class="text-muted mb-0">Assign permissions to this role</p>
            </div>
        </div>

        @if (Model.RoleName == Roles.SuperAdmin)
        {
            <div class="alert alert-warning mb-4" role="alert">
                <i data-feather="alert-triangle" class="feather-sm me-2"></i>
                <strong>SuperAdmin Role:</strong> This role automatically has all permissions and cannot be modified.
            </div>
        }

        <form method="post" asp-action="ManagePermissions" novalidate>
            <input type="hidden" name="roleId" value="@Model.RoleId" />
            
            <div class="row g-4">
                @foreach (var module in Model.PermissionsByModule)
                {
                    <div class="col-12">
                        <div class="card border mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0 fw-semibold">
                                    <i data-feather="folder" class="feather-sm me-2"></i>@module.Key
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    @foreach (var permission in module.Value)
                                    {
                                        <div class="col-md-6 col-lg-4">
                                            <div class="form-check form-check-lg">
                                                <input class="form-check-input" 
                                                       type="checkbox" 
                                                       name="selectedPermissions" 
                                                       value="@permission.Name" 
                                                       id="permission_@permission.Name"
                                                       @(permission.IsSelected ? "checked" : "")
                                                       @(Model.RoleName == Roles.SuperAdmin ? "disabled" : "") />
                                                <label class="form-check-label" for="permission_@permission.Name">
                                                    @permission.DisplayName
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4 pt-4 border-top border-2 border-light">
                <div>
                    <button type="button" class="btn btn-outline-primary btn-lg rounded-3" onclick="selectAll()">
                        <i data-feather="check-square" class="feather-sm me-2"></i>Select All
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-lg rounded-3" onclick="deselectAll()">
                        <i data-feather="square" class="feather-sm me-2"></i>Deselect All
                    </button>
                </div>
                <div class="d-flex gap-3">
                    <a asp-action="Index" class="btn btn-light btn-lg rounded-3 px-4">
                        <i data-feather="x-circle" class="feather-sm me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg rounded-3 px-4" @(Model.RoleName == Roles.SuperAdmin ? "disabled" : "")>
                        <i data-feather="save" class="feather-sm me-2"></i>Save Permissions
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            if (feather) {
                feather.replace();
            }
        });

        function selectAll() {
            document.querySelectorAll('input[name="selectedPermissions"]:not([disabled])').forEach(function(checkbox) {
                checkbox.checked = true;
            });
        }

        function deselectAll() {
            document.querySelectorAll('input[name="selectedPermissions"]:not([disabled])').forEach(function(checkbox) {
                checkbox.checked = false;
            });
        }
    </script>
}

