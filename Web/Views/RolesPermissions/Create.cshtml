@using Core.Modules.UserManagement.RoleViewModels
@model string

<partial name="_AlertMessages" />

<partial name="_PageHeader" model="@((string)null)" />

<div class="card shadow-sm rounded-4 border-0 bg-white">
    <div class="card-body p-4 p-md-5">
        <div class="d-flex align-items-center gap-3 mb-4 pb-3 border-bottom border-2 border-light">
            <div class="bg-primary-subtle rounded-4 p-3">
                <i data-feather="shield-plus" class="feather-lg text-primary"></i>
            </div>
            <div>
                <h3 class="fw-semibold text-body-emphasis mb-1 lh-base">Add New Role</h3>
                <p class="text-muted mb-0">Create a new role for your system</p>
            </div>
        </div>

        <form method="post" asp-action="Create" novalidate>
            <div class="row g-4">
                <div class="col-12">
                    <label for="roleName" class="form-label fw-semibold">Role Name <span class="text-danger">*</span></label>
                    <input type="text" 
                           id="roleName" 
                           name="roleName" 
                           class="form-control form-control-lg rounded-3" 
                           placeholder="Enter role name (e.g., Manager, Staff)"
                           required
                           maxlength="50" />
                    <small class="form-text text-muted">Role names should be descriptive and unique</small>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-3 mt-4 pt-4 border-top border-2 border-light">
                <a asp-action="Index" class="btn btn-light btn-lg rounded-3 px-4">
                    <i data-feather="x-circle" class="feather-sm me-2"></i>Cancel
                </a>
                <button type="submit" class="btn btn-primary btn-lg rounded-3 px-4">
                    <i data-feather="check-circle" class="feather-sm me-2"></i>Create Role
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            if (feather) {
                feather.replace();
            }
        });
    </script>
}

