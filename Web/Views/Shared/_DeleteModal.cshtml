@*
    Reusable Delete Confirmation Modal
    
    Parameters (via ViewData):
    - DeleteUrl: URL to submit the delete form to (required)
    - ModalId: Unique modal ID (required)
    - Title: Modal title (optional, defaults to "Delete")
    - Message: Confirmation message (optional)
    - EntityId: ID value for form parameter (optional, if DeleteUrl doesn't include id in route)
*@
@{
    var deleteUrl = ViewData["DeleteUrl"] as string ?? "#";
    var modalId = ViewData["ModalId"] as string ?? "deleteModal";
    var title = ViewData["Title"] as string ?? "Delete";
    var message = ViewData["Message"] as string ?? "Are you sure you want to delete this item? This action cannot be undone.";
    var entityId = ViewData["EntityId"];
}

<div class="modal fade modal-default" id="@modalId" tabindex="-1" aria-labelledby="@(modalId)Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div class="success-wrap text-center">
                    <form action="@deleteUrl" method="post">
                        @Html.AntiForgeryToken()
                        @if (entityId != null)
                        {
                            <input type="hidden" name="id" value="@entityId" />
                        }
                        <div class="icon-success bg-danger-transparent text-danger mb-2">
                            <i class="ti ti-trash"></i>
                        </div>
                        <h3 class="mb-2">@title</h3>
                        <p class="fs-16 mb-3">@message</p>
                        <div class="d-flex align-items-center justify-content-center gap-2 flex-wrap">
                            <button type="button" class="btn btn-md btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-md btn-primary">Yes, Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

